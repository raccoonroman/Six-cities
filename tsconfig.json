{
  "compilerOptions": {
    "outDir": "build",
    "baseUrl": "src",
    "module": "commonjs",
    "target": "es2016",
    "jsx": "react",
    "esModuleInterop": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
